@model IEnumerable<ExpenseTracker.UI.Models.DTO.UserDto>

@{
    <h1 class="mt-3">Users</h1>

    <div class="d-flex justify-content-end">
        <a class="btn btn-secondary" asp-controller="Users" asp-actions="Add">Add User</a>


    </div>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Pfp</th>
                <th></th>

            </tr>

        </thead>


        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.UserID"
                           class="btn btn-light">Edit</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}



